    <script src="client.js"></script>
</head>
<body>
    <div id="wrap"> 
        <div class="row">
            <div class="col-md-12 panel"> 
                <div class="logout room"><a class="btn btn-lg btn-primary" href="/logout">Выйти</a></div>
                <h1>Messages</h1>
            </div>
        </div> 
        <div class="row"> 
            <div class="col-md-2 panel" id="users">
